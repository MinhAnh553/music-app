extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block link
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/aplayer@1.10.1/dist/APlayer.min.css")

block main
  .singer-detail 
    .container.my-3 
        if(song)
            .row(data-song=song data-singer=song.infoSinger)
                .col-12
                    .inner-title #{song.title}

                    .inner-actions
                        div(class="inner-action inner-time")
                            <i class="fa-regular fa-clock"></i> 20/10/2023
                        div(class="inner-action inner-singer")
                            <i class="fa-solid fa-microphone-lines"></i> #{song.infoSinger.fullName}
                        div(class="inner-action inner-topic")
                            <i class="fa-solid fa-music"></i> #{song.infoTopic.title}
                        div(class="inner-action inner-like")
                            <i class="fa-regular fa-heart"></i> Bài hát yêu thích

                    .inner-play
                        .inner-avatar
                            img(src=song.avatar)
                        .inner-audio
                            div(id="aplayer")
                            //- audio(controls)
                            //-     source(src=song.audio)
                    .inner-desc
                        .inner-label Mô tả
                        .inner-text 
                            | !{song.description}

                    .inner-desc
                        .inner-label Lời bài hát
                        .inner-text 
                            | !{song.lyrics}
        else 
            h3 Không khả dụng!

block script 
    script(src="https://cdn.jsdelivr.net/npm/aplayer@1.10.1/dist/APlayer.min.js")
    script(src="/js/script.js")